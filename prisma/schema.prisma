generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}


model Rol {
  id   Int    @id @default(autoincrement())
  name String
  User User[]
}



model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     
  password  String
  idrol    Int
  createdAt DateTime   @default(now())  
  Rol       Rol        @relation(fields: [idrol], references: [id])

}



model Product{
  id        Int        @id @default(autoincrement())
  name      String
  description      String
  price     Float
  createdAt DateTime   @default(now())
  Inventory Inventory[]
  ProductHasCategory ProductHasCategories[]
  
}

model Category{
  id        Int        @id @default(autoincrement())
  title     String
  createdAt DateTime   @default(now())
  ProductHasCategory ProductHasCategories[]
  
}

model ProductHasCategories{
  id        Int        @id @default(autoincrement())
  idproduct Int
  idcategory Int
  createdAt DateTime   @default(now())
  Product   Product    @relation(fields: [idproduct], references: [id])
  Category   Category    @relation(fields: [idcategory], references: [id])
}

model Stand{
  id        Int        @id @default(autoincrement())
  name      String
  owner     String
  image     String
  direction String
  longitude Float
  latitude Float
  nr      String
  phone     String
  urlPage     String
  createdAt DateTime   @default(now())
  Inventory Inventory[]
  

}

model Inventory{
  id        Int        @id @default(autoincrement())
  idproduct Int
  idstand   Int
  amount  Int
  createdAt DateTime   @default(now())
  Product   Product    @relation(fields: [idproduct], references: [id])
  Stand     Stand      @relation(fields: [idstand], references: [id])
}

model Entrance{
  id        Int        @id @default(autoincrement())
  name    String
  createdAt DateTime   @default(now())
}

model Routegeo{
  id        Int        @id @default(autoincrement())
  longitude Float
  latitude Float
  nrStand String
  nameEntrance String
  createdAt DateTime   @default(now())

}

model Pointgeo{
  id        Int        @id @default(autoincrement())
  longitude Float
  latitude Float
  order Int
  stand_id Int

  createdAt DateTime   @default(now())
}	
